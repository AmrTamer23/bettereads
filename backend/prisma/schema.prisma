
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  username  String     @unique
  password  String
  email     String     @unique
  avatar    String
  books     UserBook[]
  admin     Boolean    @default(false)
}


model UserBook {
  id         String     @id @default(uuid())
  user       User       @relation(fields: [userId], references: [id])
  userId     String
  bookId     String
  startDate  DateTime?
  finishDate DateTime?
  review     Review? @relation(fields: [reviewid], references: [id])
  reviewid String?
  status     ReadStatus
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  progress   Int        @default(0)
  numberOfPages Int 

  @@unique([userId, bookId])
}

enum ReadStatus {
  TO_BUY
  TO_READ
  READING
  READ
}

model Review {
  id String @id @default(uuid())
  content String
  stars Int

  UserBook UserBook[]
}