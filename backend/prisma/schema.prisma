
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  userName  String     @unique
  password  String
  email     String     @unique
  avatar    String
  books     UserBook[]
}

model Book {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  title         String
  author        String
  numOfPages    Int
  bookCover     String
  isbn          String?    @unique
  description   String?
  genre         String?
  publishedDate DateTime?
  users         UserBook[]
}

model UserBook {
  id         String     @id @default(uuid())
  user       User       @relation(fields: [userId], references: [id])
  userId     String
  book       Book       @relation(fields: [bookId], references: [id])
  bookId     String
  startDate  DateTime?
  finishDate DateTime?
  rating     Int?
  review     String?
  status     ReadStatus
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  progress   Int        @default(0)

  @@unique([userId, bookId])
}

enum ReadStatus {
  TO_BUY
  TO_READ
  READING
  READ
}
